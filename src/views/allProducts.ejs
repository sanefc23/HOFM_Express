<%- include('partials/head.ejs') %>

<div class="background">
    <%- include('partials/nav-bar.ejs') %>
    <div class="frame">
        <h2 id="catalog-title">Cat√°logo completo</h2>
        <div class="catalog">
            <% for (let i = 0; i < allProducts.length; i++) { %>
            <section class="product">
                <a href="/products/<%= allProducts[i].id%>">
                    <img class="album-cover" src="<%= allProducts[i].front_cover %>" alt="" />
                </a>
                <h5 id="artist"><%= allProducts[i].artist.name %></h5>
                <h5 id="album"><%= allProducts[i].title %></h5>
                <a href=/products/all/edit/<%= allProducts[i].id %>><button id="update">Editar</button></a>
                <form class="delete-product" action="/products/all/delete/<%= allProducts[i].id %>?_method=DELETE"
                    method="POST">
                    <button class="delete"
                        onclick="return confirm('Are you sure you want to delete this item?');">Eliminar</button>
                </form>
            </section>
            <% } %>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>

    </html>