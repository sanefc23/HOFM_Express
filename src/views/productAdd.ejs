<%- include('partials/head.ejs') %>
<div class="background">
    <%- include('partials/nav-bar.ejs') %>
    <form action="/products/add" method="POST" enctype="multipart/form-data">
        <div class="add-frame">
            <div class="input-cover-frame">
                <div class="input-frontcover-card">
                    <label class="add-cover-label darkFont" for="addCoverInput1">
                        <img id="add-album-icon" src="/images/add-album-cover.png" alt="">
                        Front Cover</label>
                    <input type="file" id="addCoverInput1" name="front_cover">
                </div>
                <div class="input-backcover-card">
                    <label class="add-cover-label darkFont" for="addCoverInput2">
                        <img id="add-album-icon" src="/images/add-album-cover.png" alt="">
                        Back Cover</label>
                    <input type="file" id="addCoverInput2" name="back_cover">
                </div>
            </div>
            <div class="input-info-card">
                <div class="input-frame">
                    <label class="input-hint darkFont">Artista</label>
                    <select class="add-text-box" name="artists_id">
                        <option value="">Seleccioná un artista</option>
                        <% artists.forEach(artist => { %>
                        <option value="<%= artist.id %>"><%= artist.name %></option>
                        <% }) %>
                    </select>
                    <label class="input-hint darkFont">Album</label>
                    <input class="add-text-box" type="text" name="title">
                    <label class="input-hint darkFont">Descripción</label>
                    <textarea class="textarea-box darkFont" type="text" name="description"></textarea>
                    <label class="input-hint darkFont">Información Adicional</label>
                    <div class="formats">
                        <select class="info-box" name="format" id="format">
                            <option value="">Formato</option>
                            <option value="cd">CD</option>
                            <option value="dvd">DVD</option>
                            <option value="vinilo">Vinilo</option>
                        </select>
                        <input class="price-box" type="number" name="price" placeholder="Precio">
                        <select class="info-box" name="genre_id">
                            <option value="">Género</option>
                            <% genres.forEach(genre => { %>
                            <option value="<%= genre.id %>"><%= genre.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <br>
                    <div class="formats">
                        <input class="info-box" type="number" name="rating" placeholder="Valoración">
                        <input class="info-box" type="number" name="" placeholder="Stock">
                        <input class="info-box" type="date" name="release_date" placeholder="">
                    </div>
                </div>
            </div>
            <div class="input-tracklist-card">
                <div class="tracklist-frame">
                    <div class="tracklist">
                        <ul style="list-style: none;">

                        </ul>
                    </div>
                </div>
                <div class="input-tracklist-frame">
                    <label class="input-hint darkFont">Ingrese track:</label>
                    <div class="formats">
                        <input id="newTrack" class="add-track-text-box" type="text" name="">
                        <button id="add-track">+</button>
                    </div>
                </div>
            </div>
        </div>
        <button id="add-btn" type="submit">Agregar album</button>
    </form>
    <%- include('partials/footer.ejs') %>

    </html>